<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_soft">

    <View
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/bg_header_stimata"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detail Revisi"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/text_dark"
            android:layout_marginBottom="24dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status Terkini"
                    android:textSize="12sp"
                    android:textColor="@color/text_light"/>

                <TextView
                    android:id="@+id/tvDetailStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ACC"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/status_green"
                    android:layout_marginBottom="16dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EEE"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Catatan Mahasiswa"
                    android:textSize="12sp"
                    android:textColor="@color/text_light"/>

                <TextView
                    android:id="@+id/tvDetailCatatan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Isi catatan..."
                    android:textSize="16sp"
                    android:textColor="@color/text_dark"
                    android:layout_marginBottom="24dp"/>

                <Button
                    android:id="@+id/btnLihatFile"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:text="Buka File Dokumen"
                    android:background="@drawable/bg_btn_primary"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</RelativeLayout>