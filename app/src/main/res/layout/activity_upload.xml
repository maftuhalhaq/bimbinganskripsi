<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_soft">

    <View
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/bg_header_stimata"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Bimbingan"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/text_dark"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kirim progress atau revisi skripsi"
                android:textSize="14sp"
                android:textColor="@color/text_dark"
                android:alpha="0.7"
                android:layout_marginBottom="24dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:text="Catatan untuk Dosen"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"/>

                    <EditText
                        android:id="@+id/etCatatan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_input_modern"
                        android:padding="16dp"
                        android:hint="Contoh: Revisi Bab 1 tentang..."
                        android:inputType="textMultiLine"
                        android:minLines="3"
                        android:gravity="top"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/bg_input_modern"
                        android:padding="24dp"
                        android:layout_marginTop="16dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@android:drawable/ic_menu_save"
                            app:tint="@color/simsta_orange"/>

                        <Button
                            android:id="@+id/btnPilihFile"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="Pilih File (PDF)"
                            android:background="@android:color/transparent"
                            android:textColor="@color/primary_campus"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tvNamaFile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Belum ada file dipilih"
                            android:textSize="12sp"
                            android:textColor="@color/text_gray"/>
                    </LinearLayout>

                    <Button
                        android:id="@+id/btnUpload"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="Kirim Bimbingan"
                        android:background="@drawable/bg_btn_primary"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_marginTop="32dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>